.winemaker--container {
  width: 100%;
display: flex;
flex-direction: column;}

.winemaker--wrapper{
  display: flex;

}

.winemaker--details{
  flex-grow:1;
  font-size: 0.8em;
  width: 40%;

}

.winmaker--winelist__items {
  list-style: none;
  margin-left: 0;
}

.winemaker--description {
  width: 100%;

}

.winemaker__picture {
 width: 650px;
 height: 400px;
  align-self: center;
  object-fit: cover;
  margin-bottom: 30px;
}

.winemaker__name {
  margin: 30px;
  text-align: center;
}

.winemaker--details__headline {
font-size: 1.2rem;
}

.winemaker--details__margin {
  margin-top: 20px;
}

.winemaker__address > p {
  margin: 0;
}

.winemaker--socialmedia__wrapper a img{
  margin-right: 15px;
}

@media only screen and (max-width: 900px) {
	.winemaker--wrapper{
      flex-wrap: wrap-reverse;
    }
  
  .winemaker--details {
    font-size: 1rem;
  }
}

@media only screen and (min-width: 900px){
.winemaker--details {
    font-size: 0.8rem;
  width: 45%
  }
}

@media only screen and (min-width: 1100px){
.winemaker--details {
    font-size: 0.9rem;
  width: 40%
  }
}

@media only screen and (min-width: 1200px){
.winemaker--details {
    font-size: 0.9rem;
  }
}